{
    "git.enableCommitSigning": true,
    "window.title": "${dirty} (ツ)_/¯ ${activeEditorShort}",
    "editor.fontLigatures": true,
    "editor.suggestSelection": "first",
    "editor.mouseWheelZoom": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "workbench.editor.enablePreview": false,
    "git.suggestSmartCommit": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "name": "Comment",
                "scope": [
                    "comment",
                    "comment.block",
                    "comment.block.documentation",
                    "comment.line",
                    "comment.line.double-slash",
                    "punctuation.definition.comment"
                ],
                "settings": {
                    "fontStyle": "italic"
                    // "fontStyle": "italic underline",
                    // "fontStyle": "italic bold underline",
                }
            }
        ]
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "Freshcut (rainglow)",
    "html.format.indentInnerHtml": true,
    "telemetry.enableTelemetry": false,
    "debug.console.wordWrap": false,
    "editor.wordWrap": "on",
    "terminal.integrated.cursorBlinking": true,
    "editor.minimap.enabled": true,
    "editor.renderControlCharacters": false,
    "breadcrumbs.enabled": true,
    "editor.columnSelection": false,
    "extensions.autoUpdate": false,
    "editor.quickSuggestionsDelay": 5,
    "diffEditor.codeLens": true,
    "editor.minimap.maxColumn": 200,
    "editor.fontFamily": "'MonoLisa','Cascadia Code','Fira Code','IBM Plex Mono',  'Fira Code iScript', monospace, 'Fira Code', 'JetBrains Mono', 'monospace', 'VictorMono-Regular', 'Droid Sans Mono', 'Droid Sans Fallback'",
    "files.autoSaveDelay": 15000,
    "editor.fontSize": 16,
    "seito-openfile.openNewTab": true,
    "python.jediEnabled": false,
    "editor.tabSize": 4,
    "editor.linkedEditing": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.tabs.location": "left",
    "editor.fontWeight": "normal",
    "debug.inlineValues": true,
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "left",
    "extensions.ignoreRecommendations": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorBlinking": "smooth",
    "editor.hover.delay": 100,
    "editor.inlayHints.fontFamily": "'Cascadia Code','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.semanticHighlighting.enabled": true,
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.suggest.preview": true,
    "workbench.hover.delay": 200,
    "workbench.list.smoothScrolling": true,
    "workbench.welcomePage.walkthroughs.openOnInstall": false,
    "editor.foldingImportsByDefault": false,
    "npm.enableRunFromFolder": true,
    "npm-intellisense.scanDevDependencies": true,
    "window.menuBarVisibility": "visible",
    "editor.bracketPairColorization.enabled": true,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.cursorStyle": "line",
    "editor.find.addExtraSpaceOnTop": true,
    "files.insertFinalNewline": true
}
